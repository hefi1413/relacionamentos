

<%
    let _email =email;
%>
    
<!-- CENTER IMAGE -->
<div class="container-fluid image-top"></div>

<!-- ALERTS -->
<div class="container-fluid alerts" id="html-alerts"></div> 

<!-- ALINHAMENTO DO CONTAINER -->
<div class="row h-100" >    <!-- LINHA -->
    
    <div class="col" style="border:0px solid red;"> </div>
    
    <div class="col" style="border:0px solid red;">  <!-- COLUNA -->

        <!--DIV CONTENT-->
        <div class="container" style="border:0px solid blue;">
            
            <!-- title-->
            <h1 class="text-center" id="title"> Alterar Senha </h1>
            <br>
            <div class="row" style="height: 80px; background-color:#e6e6e6; ">
                <div class="col my-auto" >
                    <span id="descricao">Nesta página você poderá informar sua nova senha.</span>
                </div>
            </div>

            <!-- view password update -->
            <div class="row h-100" style="display: block;" id="div-senhas">
                <div class="col mx-auto text-center" style="border:0px solid blue;">
                    <form id="frmPwdUpdate">
                        <br>
                        <div class="form-group">
                            <input class="form-control" type="email" name="fields" value=<%=_email%> disabled>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" name="fields" id="pws2" placeholder="Informe uma nova senha" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" name="fields" id="pws3" placeholder="Confirme a senha" required>
                        </div>
                        <div id="instructions" class="text-left">
                            <!-- <span>A senha precisa conter o seguinte:</span> -->
                            <br>
                            <p id="letter" class="invalid">  letra <b>minúscula</b>  </p>
                            <p id="capital" class="invalid">  letra <b>maiúscula</b>  </p>
                            <p id="number" class="invalid">  <b>número</b></p>
                            <p id="length" class="invalid">  Mínimo <b>8 characters</b></p>
                            <p id="compativel" class="invalid">  A senha informada <b>não é compatível</b></p>
                        </div>
                        <br>
                        <button class="btn btn-success btn-lg w-50" type="submit"> Confirmar </button>
                    </form>
                </div>
            </div>
        </div>        
    </div>
    
    <div class="col" style="border:0px solid red;"> </div>
        
</div>